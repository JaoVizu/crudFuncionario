@model IEnumerable<CRUDFuncionario.Models.Departamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Cadastro de Departamentos</h1>

<p>
    <a asp-action="Create">Criar novo</a>
</p>
<table class="table table-striped" >
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fg_ativo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fg_ativo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_departamento">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id_departamento">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id_departamento">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
